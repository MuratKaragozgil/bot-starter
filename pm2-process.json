{
  "apps": [
    {
      "name": "tesla-bot",
      "script": "npm",
      "args": "start",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "logs/error.log",
      "out_file": "logs/out.log",
      "log_file": "logs/combined.log",
      "time": true
    }
  ]
} 